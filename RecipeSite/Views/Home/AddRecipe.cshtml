
@{
    ViewBag.Title = "Add Recipe";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h2><font-color ="darkgreen">Add Your Own Recipe</font-color></h2></div>
    <div class="panel-body" style="color: blue">
        <form class="p-a-1" asp-action="AddRecipe" method="post">
            <div class="form-group">
                <label>Your Name:</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Your Email:</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Your Phone:</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Recipe Name:</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Ingredients:</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Details:</label>
                <input class="form-control" />
            </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Submit Here</button>
    </div>
    </form>
    <p><h5 style="text-align:center; color:darkblue">Click <a asp-action="Index">here</a> to go back to Home Page</h5></p>
</div>
    



