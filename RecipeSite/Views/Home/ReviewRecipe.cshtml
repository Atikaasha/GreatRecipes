@model RecipeSite.Models.ViewerResponse

@{
    ViewBag.Title = "Review Recipe";
}


<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Your Review is Important to Us!</h4></div>
    <div class="panel-body" style="color: blue">
        <form class="p-a-1" asp-action="ReviewRecipe" method="post">
            <div class="form-group">
                <label asp-for="Name">Your Name:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Your Email:</label>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Phone">Your Phone:</label>
                <input class="form-control" asp-for="Phone" />
            </div>
    </div>
    <div class="form-group">
        <label asp-for="DoYouLike">Do you find our site useful?:</label>
        <select class="form-control" asp-for="DoYouLike">
            <option value="">Choose an option</option>
            <option value="true">Yes, It is useful</option>
            <option value="false">No, Its Not!</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Submit Here</button>
    </div>
    </form>
    <p><h5 style="text-align:center; color:darkblue">Click <a asp-action="Index">here</a> to go back to Home Page</h5></p>
</div>
    


